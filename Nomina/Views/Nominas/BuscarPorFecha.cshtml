@model IEnumerable<Nomina.Models.Nomina>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BuscarPorFecha</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @using (Html.BeginForm("BuscarPorFecha", "Nomina", FormMethod.Get))
    {
        <p>
            Buscar por Fecha:  @Html.DropDownList("Fecha", null, htmlAttributes: new { @class = "form-control" })
            <input type="submit" value="Buscar" />
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiasTrabajados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoPorDia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoQuincenal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado.NombreEmpleado)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DiasTrabajados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SueldoPorDia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SueldoQuincenal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.NombreEmpleado)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.NominaID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.NominaID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.NominaID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
